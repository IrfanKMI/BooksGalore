@model Company

<div style="margin-bottom:3em;margin-top:3em "> <h3 class="text-info">@(Model.Id == 0 ? "Create " : "Update ")Company</h3></div>
<form method="post" >
	<div asp-validation-summary="All"></div>
	<input asp-for="@Model.Id" hidden></input>
	<div class="row">
		<div id="widofmaindiv" style="margin:10px;padding:20px;border-radius:13px;border:1px solid #5BC0DE" class="col-10 row">
			<div class="mt-3 col-12 ">
				<label> Company Name</label>
				<input class="form-control" asp-for="Name" />
				<span asp-validation-for=Name class="text-danger"></span>

			</div>



			<div class="mt-3 col-12">
				<label>Street Address</label>
				<input class="form-control"  asp-for="StreetAddress" />
				<span asp-validation-for=StreetAddress class="text-danger"></span>
			</div>

			<div class="mt-3 col-6">
				<label>City</label>
				<input class="form-control" asp-for="City" />
				<span asp-validation-for=City class="text-danger"></span>
			</div>

			<div class="mt-3 col-6">
				<label>State</label>
				<input class="form-control" asp-for="State" />
				<span asp-validation-for=State class="text-danger"></span>
			</div>

			<div class="mt-3 col-6">
				<label>Postal Code</label>
				<input class="form-control" asp-for="PostalCode" />
				<span asp-validation-for=PostalCode class="text-danger"></span>
			</div>

			<div class="mt-3 col-6">
				<label>Phone</label>
				<input class="form-control" asp-for="PhoneNumber" />
				<span asp-validation-for=PhoneNumber class="text-danger"></span>
			</div>




			@*	This is for Using Viewbag/Viewdata instead of viewmodel
			<div class="mt-3 col-6">
			<label>Category</label>
			<select  asp-items="ViewBag.Categlist" asp-for="CategoryId" class="form-select">
			<option selected disabled>SELECT CATEGORY</option>
			</select>
			<span asp-validation-for=CategoryId  class="text-danger"></span>
			</div>

			<div class="mt-3 col-6">
			<label>CoverType</label>
			<select  asp-items=ViewBag.Coverlist asp-for="CoverTypeId" class="form-select">
			<option selected disabled>SELECT COVERTYPE</option>
			</select>
			<span asp-validation-for=CoverTypeId  class="text-danger"></span>
			</div>*@









			@*<div class="mt-3">
			<label>Created Date</label>
			<input class="form-control" asp-for="CreatedDate"/>
			</div>*@
			@*
			<div class="mt-3 text-end">
			<a asp-action="Book" asp-controller="Create" class="btn btn-warning" style="padding-left=15px;padding-right=10px">Back</a>
			</div>*@
			<div class="mt-3 text-end">
				@if (Model.Id == 0)
				{
					<button type="submit" class="btn btn-success"  style="padding-left=10px;padding-right=10px">Create New</button>

				}
				else
				{
					<button type="submit" class="btn btn-success" style="padding-left=10px;padding-right=10px">Update</button>

				}
			</div>

		</div>
		
	</div>

</form>


@section scripts
	{
	@{
		<partial name="_ValidationScriptsPartial.cshtml" />

	}
	

}

