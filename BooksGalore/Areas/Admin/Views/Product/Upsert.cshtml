@model Product

<div style="margin-bottom:3em;margin-top:3em" > <h3 class="text-info">Edit Product</h3></div>
<form method="post">
	<div style="margin:10px" class="col-6">
	<div asp-validation-summary="ModelOnly"></div>
	<div class="mt-3">
	<label> Title</label>
	<input class="form-control"  asp-for="Name" />
	<span asp-validation-for=Name class="text-danger"></span>

	</div>

	<div class="mt-3">
	<label>Description</label>
	<textarea class="form-control" rows="3" asp-for="Description"/></textarea>
	<span asp-validation-for=Description class="text-danger"></span>
	</div>

	<div class="mt-3">
	<label>ISBN</label>
	<input class="form-control"  asp-for="ISBN"/>
	<span asp-validation-for=ISBN class="text-danger"></span>
	</div>
	
	<div class="mt-3">
	<label>Author</label>
	<input class="form-control"  asp-for="Author"/>
	<span asp-validation-for=Author class="text-danger"></span>
	</div>

	<div class="mt-3">
	<label>ListPrice</label>
	<input class="form-control"  asp-for="listprice"/>
	<span asp-validation-for=listprice class="text-danger"></span>
	</div>

	<div class="mt-3">
	<label>Price</label>
	<input class="form-control"  asp-for="price"/>
	<span asp-validation-for=price class="text-danger"></span>
	</div>

	<div class="mt-3">
	<label>Price50</label>
	<input class="form-control"  asp-for="price50"/>
	<span asp-validation-for=price50 class="text-danger"></span>
	</div>

	<div class="mt-3">
	<label>Price100</label>
	<input class="form-control"  asp-for="price100"/>
	<span asp-validation-for=price100 class="text-danger"></span>
	</div>



	<div class="mt-3">
	<label>Category</label>
	<select  asp-items="ViewBag.Categlist" asp-for="CategoryId" >
	<option selected disabled>SELECT CATEGORY</option>
	</select>
	<span asp-validation-for=CategoryId  class="text-danger"></span>
	</div>
	
	<div class="mt-3">
	<label>CoverType</label>
	<select  asp-items=ViewBag.Coverlist asp-for="CoverTypeId" class="form-select">
	<option selected disabled>SELECT COVERTYPE</option>
	</select>
	<span asp-validation-for=CoverTypeId  class="text-danger"></span>
	</div>
	
	

	

	
	
