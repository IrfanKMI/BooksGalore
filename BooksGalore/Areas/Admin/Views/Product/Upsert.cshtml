@model ProductVM

<div style="margin-bottom:3em;margin-top:3em " > <h3 class="text-info">@(Model.product.Id==0?"Create ":"Update ")Product</h3></div>
<form method="post" enctype="multipart/form-data">
	<div id="widofmaindiv" style="margin:10px;padding:80px;border-radius:13px;border:1px solid #5BC0DE" class="row">
	<div asp-validation-summary="All"></div>

	<div class="mt-3 col-12 ">
	<label> Title</label>
	<input class="form-control"  asp-for="product.Name" />
	<span asp-validation-for=product.Name class="text-danger"></span>

	</div>

	<div class="mt-3 col-12">
	<label>Description</label>
	<textarea class="form-control" rows="3" asp-for="product.Description"/></textarea>
	<span asp-validation-for=product.Description class="text-danger"></span>
	</div>

	<div class="mt-3 col-6">
	<label>ISBN</label>
	<input class="form-control"  asp-for="product.ISBN"/>
	<span asp-validation-for=product.ISBN class="text-danger"></span>
	</div>
	
	<div class="mt-3 col-6">
	<label>Author</label>
	<input class="form-control"  asp-for="product.Author"/>
	<span asp-validation-for=product.Author class="text-danger"></span>
	</div>

	<div class="mt-3 col-6">
	<label>ListPrice</label>
	<input class="form-control"  asp-for="product.listprice"/>
	<span asp-validation-for=product.listprice class="text-danger"></span>
	</div>

	<div class="mt-3 col-6">
	<label>Price</label>
	<input class="form-control"  asp-for="product.price"/>
	<span asp-validation-for=product.price class="text-danger"></span>
	</div>

	<div class="mt-3 col-6">
	<label>Price50</label>
	<input class="form-control"  asp-for="product.price50"/>
	<span asp-validation-for=product.price50 class="text-danger"></span>
	</div>

	<div class="mt-3 col-6">
	<label>Price100</label>
	<input class="form-control"  asp-for="product.price100"/>
	<span asp-validation-for=product.price100 class="text-danger"></span>
	</div>

		<div class="mt-3 col-6">
	<label>ImageURL</label>
	<input id="img" name="file" type="file" class="form-control"  asp-for="product.ImageURL"/>
	</div>



