@{
    ViewData["title"] = "List of Categories";
}
@*<partial name="_toastr.cshtml" />
*@<div class="container" width="70%" style="margin:50px auto">
    <div class=row pt-3>
    <div class="mb-3 col-6">
        <h2 class="text-info">Categories</h2>
    </div>
    <div class="mb-3 col-6 text-end" >
        <a  asp-controller="Book" asp-action="Create" class=" btn btn-outline-success"><i class="bi-plus-square-fill"></i>&nbsp New Category</a>
        </div>
    </div>
    <table id="myTable1" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
                <th>

                </th>
             
            </tr>
        </thead>
        <tbody>
          
            @foreach (var i in Model)
            {
                <tr>
                    <td>
                        @i.Name
                    </td>
                    <td>
                        @i.Category.Name
                    </td>
                    <td class="text-center">
                        <div class="btn-group">
                            <a  class="btn btn-outline-info" asp-controller="Book" asp-action="Edit" asp-route-id=@i.Id>Edit</a>
                            <a  class="btn btn-outline-danger" asp-controller="Book" asp-action="Delete" asp-route-id=@i.Id>Delete</a>

                        </div>
                    </td>
                </tr>
            }

        </tbody>
    </table>


</div>

